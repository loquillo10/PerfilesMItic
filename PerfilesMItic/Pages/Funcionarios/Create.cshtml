                                    <label asp-for="Funcionario.PaisNacimiento" class="control-label">Pais de Nacimiento</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-flag"></i>
                                            </span>
                                        </div>
                                        <select asp-for="Funcionario.IdPais" class="form-control"
                                                asp-items="@Model.listPais">
                                            <option value="">--Seleccione---</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Funcionario.PaisNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Pasaporte" class="control-label">Nº de Pasaporte</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-passport"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.Pasaporte" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.Pasaporte" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.RegConducir" class="control-label">Registro De Conducir</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-id-card"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.RegConducir" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.RegConducir" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Categoria" class="control-label">Categoria</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-id-card-alt"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.Categoria" class="form-control" placeholder="B, A, C, Particular" />
                                    </div>
                                    <span asp-validation-for="Funcionario.Categoria" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.RUC" class="control-label">RUC</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-id-card"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.RUC" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.RUC" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Sexo" class="control-label">Ingrese Su Sexo</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-user-circle"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.Sexo" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.Sexo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Telefono" class="control-label">Linea Baja</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-phone-alt"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.Telefono" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.Telefono" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.TelefonoMovil" class="control-label">Celular</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
