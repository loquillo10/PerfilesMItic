@page "/funcionarios/DatosPersonales"
@model PerfilesMItic.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}


<hr />
   
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card">
            <div class="card-header">
                <h1>Datos Personales</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9 col-md-9 col-xs-12">
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Cedula" class="control-label">Cedula de Identidad</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-id-card"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.Cedula" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.Cedula" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Nombre" class="control-label">Nombres</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-user-alt"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.Nombre" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Apellido" class="control-label">Apellidos</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-user"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Funcionario.Apellido" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.Apellido" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                        <input type="date" asp-for="Funcionario.FechaNacimiento" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Funcionario.FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Barrio">Barrio</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-globe"></i>
                                            </span>
                                        </div>
                                        <select asp-for="Funcionario.IdBarrio" class="form-control"
                                                asp-items="@Model.listaBarrio">
                                            <option value="">---Seleccionar---</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Funcionario.IdBarrio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Ciudades" class="control-label">Ciudad</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-globe"></i>
                                            </span>
                                        </div>
                                       <select asp-for="Funcionario.IdCiudad" class="form-control"
                                               asp-items="@Model.listCiudad">
                                           <option value="">--Seleccione---</option>
                                       </select>
                                    </div>
                                    <span asp-validation-for="Funcionario.Ciudades" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="Funcionario.Departamento" class="control-label">Departamento</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-building"></i>
                                            </span>
                                        </div>
                                        <select asp-for="Funcionario.IdDepartamento" class="form-control"
                                                asp-items="@Model.listDepartamento">
                                            <option value="">---Selecciona---</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Funcionario.Departamento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-xs-12">
