@page
@model PerfilesMItic.Pages.Funcionarios.IndexModel

@{
    ViewData["Title"] = "Index";
}


<hr />
<div class="container">
    <div id="acordeon">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header" id="headingOne">
                    <button type="button" class="texto" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Datos Personales
                    </button>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#acordeon">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-9 col-md-9 col-xs-12">
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Cedula" class="control-label">Cedula de Identidad</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-id-card"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Cedula" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Cedula" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Nombre" class="control-label">Nombres</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-user-alt"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Nombre" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Nombre" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Apellido" class="control-label">Apellidos</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Apellido" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Apellido" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-calendar-alt"></i>
                                                    </span>
                                                </div>
                                                <input type="date" asp-for="@Model.Funcionario.FechaNacimiento" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.FechaNacimiento" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Barrio">Barrio</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-globe"></i>
                                                    </span>
                                                </div>
                                                <select asp-for="@Model.Funcionario.IdBarrio" class="form-control"
                                                        asp-items="@Model.listaBarrio">
                                                    <option value="">---Seleccionar---</option>
                                                </select>
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.IdBarrio" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Ciudades" class="control-label">Ciudad</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-globe"></i>
                                                    </span>
                                                </div>
                                                <select asp-for="@Model.Funcionario.IdCiudad" class="form-control"
                                                        asp-items="@Model.listCiudad">
                                                    <option value="">--Seleccione---</option>
                                                </select>
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Ciudades" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Departamento" class="control-label">Departamento</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-building"></i>
                                                    </span>
                                                </div>
                                                <select asp-for="@Model.Funcionario.IdDepartamento" class="form-control"
                                                        asp-items="@Model.listDepartamento">
                                                    <option value="">---Selecciona---</option>
                                                </select>
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Departamento" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.PaisNacimiento" class="control-label">Pais de Nacimiento</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-flag"></i>
                                                    </span>
                                                </div>
                                                <select asp-for="@Model.Funcionario.IdPais" class="form-control"
                                                        asp-items="@Model.listPais">
                                                    <option value="">--Seleccione---</option>
                                                </select>
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.PaisNacimiento" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Pasaporte" class="control-label">Nº de Pasaporte</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-passport"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Pasaporte" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Pasaporte" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.RegConducir" class="control-label">Registro De Conducir</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-id-card"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.RegConducir" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.RegConducir" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Categoria" class="control-label">Categoria</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-id-card-alt"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Categoria" class="form-control" placeholder="B, A, C, Particular" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Categoria" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.RUC" class="control-label">RUC</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-id-card"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.RUC" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.RUC" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Sexo" class="control-label">Ingrese Su Sexo</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-user-circle"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Sexo" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Funcionario.Sexo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Telefono" class="control-label">Linea Baja</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-phone-alt"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Telefono" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Telefono" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.TelefonoMovil" class="control-label">Celular</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-mobile"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.TelefonoMovil" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.TelefonoMovil" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.EstadoCivil" class="control-label">Estado Cilvil</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-user-slash"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.EstadoCivil" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.EstadoCivil" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-12 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Direccion" class="control-label">Direccion</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-address-card"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Direccion" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Direccion" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Correo" class="control-label">Correo Institucional</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Correo" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Correo" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.TipoFuncionario" class="control-label">Relacion con la Institucion</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-user-astronaut"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.TipoFuncionario" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.TipoFuncionario" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-12 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.EmailParticular" class="control-label">Correo Particular</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-envelope-open"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.EmailParticular" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.EmailParticular" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-12 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Observaciones" class="control-label">Observaciones</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-binoculars"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Observaciones" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Observaciones" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-10 col-md-12 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Funcionario.Vivienda" class="control-label">Vienda</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-house-user"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="@Model.Funcionario.Vivienda" class="form-control" />
                                            </div>
                                            <span asp-validation-for="@Model.Funcionario.Vivienda" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="@Model.Funcionario.Activo" /> @Html.DisplayNameFor(model => model.Funcionario.Activo)
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-2 col-md-2 col-xs-12">
                                        <div class="form-group">
                                            <button type="submit" value="Create" class="btn btn-outline-primary">Agregar</button>
                                        </div>
                                    </div>

                                </div>

                                @*<div class="row">
                                        <div class="col-sm-2 col-md-2 col-xs-12">
                                            <div>
                                                <a asp-page="uncionario/Create" class="btn btn-outline-info">Regresar</a>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>
                            <div class="col-sm-3 col-md-3 col-xs-12">
                                <div class="form-group">
                                    <label asp-for="@Model.Funcionario.Imagen" class="control-label">FOTO</label>
                                    <div class="card">
                                        <img src="~/images/default.png" id="preview" class="img-thumbnail" />
                                    </div>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="customFileLang" onchange="previewFile()" lang="es">
                                            <label asp-for="@Model.Funcionario.Imagen" class="custom-file-label" for="customFileLang">Seleccionar Archivo</label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="@Model.Funcionario.Imagen" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
