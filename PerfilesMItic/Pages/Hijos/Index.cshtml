@page
@model PerfilesMItic.Pages.Hijos.IndexModel
@{
}
<div class="container">
    <div id="acordonar3">
        <div class="card">
            <div class="card-header" id="hiddingtree">
                <button type="button" class="texto" data-toggle="collapse" data-target="#collapsetres" aria-expanded="true" aria-controls="collapsetres">
                    Datos de Hijos
                </button>
            </div>
            <div id="collapsetres" class="collapse show" aria-labelledby="hiddingtree" data-parent="#acordonar3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-10 col-md-10 col-xs-12">
                            <form method="post" asp-page-handler="Hijo">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="Hijo.cedulaH" class="control-label">Cedula</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-id-card"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="Hijo.cedulaH" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Hijo.cedulaH" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="Hijo.NombreH" class="control-label">Nombre del Hijo/a</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-user-alt"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="Hijo.NombreH" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Hijo.NombreH" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="Hijo.ApellidoH" class="control-label">Apellido del Hijo/a</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-user-alt-slash"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="Hijo.ApellidoH" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Hijo.ApellidoH" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="Hijo.FechaNacimientoH" class="control-label">Fecha de Nacimiento</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-calendar-alt"></i>
                                                    </span>
                                                </div>
                                                <input type="date" asp-for="Hijo.FechaNacimientoH" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Hijo.FechaNacimientoH" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row pl-3">
                                    <div class="form-group">
                                        <label asp-for="Hijo.cantidadHijos" class="control-label">Cantidad de Hijos</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fa fa-mix"></i>
                                                </span>
                                            </div>
                                            <input asp-for="Hijo.cantidadHijos" class="form-control" disabled />
                                        </div>
                                        <span asp-validation-for="Hijo.cantidadHijos" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="hidden" asp-for="@Model.Funcionario.Id" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" value="Create" class="btn btn-outline-primary">Agregar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>