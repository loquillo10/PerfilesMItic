@page "/Familiares/AgregarFamiliar"
@model PerfilesMItic.Pages.Familiares.CreateModel

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Datos Familiares</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Familiar.NombreF" class="control-label">Nombre Familiar</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-user-alt"></i>
                                    </span>
                                </div>
                                <input asp-for="Familiar.NombreF" class="form-control" />
                            </div>
                            <span asp-validation-for="Familiar.NombreF" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Familiar.ApellidoF" class="control-label">Apellido Familiar</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </div>
                                <input asp-for="Familiar.ApellidoF" class="form-control" />
                            </div>
                            <span asp-validation-for="Familiar.ApellidoF" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Familiar.TipoFamiliar" class="control-label">Relacion Familiar</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-user-alt-slash"></i>
                                    </span>
                                </div>
                                <input asp-for="Familiar.TipoFamiliar" class="form-control" />
                            </div>
                            <span asp-validation-for="Familiar.TipoFamiliar" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-outline-primary" />
                        </div>
                    </form>
                    <div class="form-group">
                        <a asp-page="../Funcionarios/Create" class="btn btn-outline-info">Datos Personales</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
